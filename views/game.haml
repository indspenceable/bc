!!!
%html
  %head
    %title
      BC
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"}
    %link{:href => "/game.css", :type => "text/css", :rel => "stylesheet"}
  %body
    %h1
      Battlecon
    .game
      .my-attack-pair.attack-pair
        .style
        .base
      .their-attack-pair.attack-pair
        .style
        .base
      .board
        Current Game board: </br>
        .space.space-0
        .space.space-1
        .space.space-2
        .space.space-3
        .space.space-4
        .space.space-5
        .space.space-6
        .clear{:style => "clear: both"}
      .my-cards.card-collection
        ME </br>
        .my-hand
          .bases
            .card dash
            .card grasp
            .card drive
            .card strike
            .card shot
            .card burst
          .styles
            .card focused
            .card trance
            .card advancing
        .discard1.attack-pair.attack-pair-small
          .style
          .base
        .discard2.attack-pair.attack-pair-small
          .style
          .base
      .their-cards.card-collection
        them </br>
      .clear{:style => "clear: both"}
      .eventLog
      .userInput
        .prompt
          You need to answer:
          %span.current-question
        .answer-links
        %form.free-form
          %input{:type => "text"}
  %script{:src => "/game.js"}
  :javascript
    Game.init("#{@player_id}", "#{@game_id}", #{Game.character_names})
