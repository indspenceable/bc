%table.table.table-striped.table-bordered.table-hover
  %tr
    %th
      .btn-group
        %a.btn.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
          Challenge
          %span.caret
        %ul.dropdown-menu
          - User.except(current_user).each do |user|
            %li
              = link_to user.name, challenge_path(opponent_id: user.id)
  %tr
    %th Active Games
  -Game.active.order("created_at").each do |game|
    %tr
      %td
        - begin
          = game_string(game)
        - rescue
          .label.label-warning Invalid Game.
  %tr
    %th Recently Finished Games
  -Game.inactive.order("updated_at DESC").limit(10).each do |game|
    %tr
      %td
        - begin
          = game_string(game)
        - rescue
          .label.label-warning Invalid Game.
